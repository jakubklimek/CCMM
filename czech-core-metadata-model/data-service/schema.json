{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://model.ccmm.cz/rd/data-service/schema.json",
  "title": "Data service",
  "description": "A collection of operations that provides access to one or more datasets or data processing functions.",
  "type": "object",
  "required": [
    "endpoint_url"
  ],
  "properties": {
    "id": {
      "type": "string",
      "format": "iri"
    },
    "type": {
      "oneOf": [
        {
          "const": "Data service"
        },
        {
          "type": "array",
          "contains": {
            "const": "Data service"
          },
          "items": {
            "type": "string"
          }
        }
      ]
    },
    "label": {
      "title": "Label",
      "description": "Data service label",
      "type": "array",
      "items": {
        "title": "Language tagged string",
        "type": "object",
        "required": [
          "@value",
          "@language"
        ],
        "properties": {
          "@value": {
            "title": "Text v dan√©m jazyce",
            "type": "string"
          },
          "@language": {
            "title": "Jazyk textu",
            "type": "string"
          }
        }
      }
    },
    "endpoint_url": {
      "title": "endpoint URL",
      "description": "The root location or primary endpoint of the service (an IRI).",
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "format": "iri"
      }
    }
  }
}